{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/"
        },
        {
            "source": "/login",
            "destination": "public/index.html"
        },
        {
            "source": "/register",
            "destination": "public/index.html"
        },
        {
            "source": "/home",
            "destination": "public/index.html"
        }
    ]
}